{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:prettier/recommended",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "comma-dangle": "off", // if "error", it conflicts with prettier's "trailingComma"
    "arrow-parens": [
      "error",
      "as-needed" // if "always", it conflicts with prettier
    ],
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": true,
        "doubleQuote": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "useTabs": false
      }
    ],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          "jsx",
          "tsx"
        ]
      }
    ]
  }
}
